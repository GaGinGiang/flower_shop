<% provide :title, t(".sign") %>
<center><h1><%= t ".sign" %></h1></center>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t(".name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :sex, t(".sex") %>
      <%= f.select :sex, User.sex_attributes_for_select, class: "selected" %>

      <%= f.label :address, t(".address") %>
      <%= f.text_field :address, class: "form-control" %>

      <%= f.label :username, t(".username") %>
      <%= f.text_field :username, class: "form-control" %>

      <%= f.label :email, t(".email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t(".pass") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t(".con") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

       <%= f.submit t ".creat", class: "btn btn-primary btn-rounded" %>
    <% end %>
  </div>
</div>
